<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_wenda"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#40c8c8">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/q1" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_wenda"
                android:layout_alignRight="@+id/rl_wenda"
                android:layout_below="@+id/rl_wenda">

                <TextView
                    android:id="@+id/tv_wenda"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_question_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_wenda"
                    android:layout_alignLeft="@+id/tv_wenda"
                    android:textColor="#40c895"
                    android:textSize="10sp"
                    android:layout_marginBottom="10dp"
                    android:text=""/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个问题得到解决"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_alignBottom="@id/tv_question_num"
                    android:layout_toRightOf="@+id/tv_question_num"
                    android:textSize="11sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_jieban"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:background="#3bb889">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/q2" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_jieban"
                android:layout_alignRight="@+id/rl_jieban"
                android:layout_below="@+id/rl_jieban">

                <TextView
                    android:id="@+id/tv_jieban"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_jieban_num"
                    android:layout_width="wrap_content"
                    android:textColor="#40c895"
                    android:layout_marginBottom="10dp"
                    android:layout_alignLeft="@+id/tv_jieban"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jieban"
                    android:textSize="10sp"
                    android:text="451573"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个网友在此结伴"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_alignBottom="@id/tv_jieban_num"
                    android:layout_toRightOf="@+id/tv_jieban_num"
                    android:textSize="11sp" />


            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>